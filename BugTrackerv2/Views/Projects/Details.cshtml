@model BugTrackerv2.Models.CustomViewModels.UserDisplayViewModel

@{
    ViewBag.Title = "Details";
}
<div class="single-head">
    <h2 class="pull-left">Details</h2>
    <div class="clearfix"></div>
</div>


<br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div >
                <p><strong>Name</strong> @Model.projectName</p>
            </div>            
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-5">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{var userCount = 1;}
                    @foreach (var user in Model.PM)
                    {
                        
                        <tr>
                            <td>@userCount</td>
                            <td>@user.DisplayName</td>
                        </tr>
                        userCount++;
                    } 
                </tbody>                               
            </table>
        </div>
        <div class="col-md-5">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{var developerCount = 1;}
                    @foreach (var user in Model.Devs)
                    {
                        
                        <tr>
                            <td>@developerCount</td>
                            <td>@user.DisplayName</td>
                        </tr>
                        ++developerCount;
                    }
                </tbody>                
            </table>
        </div>
    </div>
</div>
<div class="table">

</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.projectId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
