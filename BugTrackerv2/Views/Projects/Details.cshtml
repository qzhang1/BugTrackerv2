@model BugTrackerv2.Models.CustomViewModels.UserDisplayViewModel

@{
    ViewBag.Title = "Details";
}
<div class="single-head">
    <h2 class="pull-left">Details</h2>
    <div class="clearfix"></div>
</div>


<br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p><strong>Name</strong> @Model.projectName</p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-5">
            <table class="table-striped" border="1">
                <tr><th>Project Managers</th></tr>
                @foreach (var user in Model.PM)
                {
                    <tr><td>@user.DisplayName</td></tr>
                }                
            </table>
        </div>
        <div class="col-md-5">
            <table class="table-striped" border="1">
                <tr><th>Developers</th></tr>
                @foreach (var user in Model.Devs)
                {
                    <tr><td>@user.DisplayName</td></tr>
                }
            </table>
        </div>
    </div>
</div>
<div class="table">

</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.projectId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
