@model IEnumerable<BugTrackerv2.Models.TicketFolder.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        
        
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Project
        </th>
        <th>
            Type
        </th>
        <th>
            Status
        </th>
        <th>
            Priority
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
