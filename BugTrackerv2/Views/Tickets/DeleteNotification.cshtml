@model BugTrackerv2.Models.TicketFolder.TicketNotification

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Notification?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ticket
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ticket.Title)
        </dd>
        <dt>
            Notification Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.message)
        </dd>

        <dt>
            Created on
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>        
        </dl>
    @using (Html.BeginForm("DeleteNotification","Tickets")) {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Cancel", "Notifications","Tickets", new { @class="btn btn-primary" })
        </div>
    }
</div>
