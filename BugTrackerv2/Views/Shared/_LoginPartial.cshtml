@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right" style="margin-bottom:0;">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style="padding-top:0;padding-bottom:0;" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="padding-top:0;padding-bottom:0;">Log off</a></li>
    </ul>
    }
}
